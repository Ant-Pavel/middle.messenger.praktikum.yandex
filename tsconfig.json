{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts", "declarations.d.ts", "eslint.config.js"],
    "exclude": ["node_modules"]
}
