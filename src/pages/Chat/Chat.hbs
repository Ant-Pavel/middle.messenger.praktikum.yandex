<main class="chatPage__container">
    <div class="chatPage__left">
        <div class="profileLink__wrap">
            <a href="#" id="chatProfileLink" class="profileLink" data-forEventName="profileLink">
                <span>Профиль</span>
                <svg class="profileLink__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="15"
                    height="15">
                    <title>chevron-right</title>
                    <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
                </svg>
            </a>
        </div>
        <div class="chat__search">
            <div class="searchInput__wrap {{#if chatSearchInputValue}}searchInput__wrap--hasValue{{else}}''{{/if}}">
                <input class="searchInput" id="chatSearchInput" type="text" value="{{chatSearchInputValue}}" data-forEventName="chatSearchInput">
                <label for="chatSearchInput" class="searchInput__label">
                    <svg class="searchInput__labelIcon" width="20" height="20" viewBox="0 0 20 20" fill="black" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M11.5924 11.4138C10.1605 12.8457 7.83886 12.8457 6.40694 11.4138C4.97502 9.9819 4.97502 7.6603 6.40694 6.22837C7.83886 4.79645 10.1605 4.79645 11.5924 6.22837C13.0243 7.6603 13.0243 9.9819 11.5924 11.4138ZM12.0328 12.7968C10.0725 14.2962 7.25696 14.1495 5.46413 12.3566C3.51151 10.404 3.51151 7.23819 5.46413 5.28556C7.41675 3.33294 10.5826 3.33294 12.5352 5.28556C14.3279 7.07831 14.4747 9.89373 12.9755 11.8539L16.5423 15.4206L15.5994 16.3635L12.0328 12.7968Z"
                            fill="#999999" />
                    </svg>
                    <span>{{ chatSearchInputLabel }}</span>
                </label>
            </div>
        </div>
        <ul class="chat__list">
            {{{ chatList }}}
        </ul>
    </div>
    <div class="chatPage__right chat">
        <header class="chat__header">
            <img class="chat__avatar" width="35" height="35"
                src="{{avatarImgUrl}}"
                alt="chat avatar">
            <h2 class="chat__title">Вадим</h2>
            <button class="chat__actionsBtn chat__actionsBtn--active" data-forEventName="chatMenuBtn">
                <svg height="25" width="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#1E1E1E">
                    <title>dots-vertical</title>
                    <path
                        d="M12,16A2,2 0 0,1 14,18A2,2 0 0,1 12,20A2,2 0 0,1 10,18A2,2 0 0,1 12,16M12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12A2,2 0 0,1 12,10M12,4A2,2 0 0,1 14,6A2,2 0 0,1 12,8A2,2 0 0,1 10,6A2,2 0 0,1 12,4Z" />
                </svg>
            </button>
        </header>
        <main class="chat__content">
            {{{ chatGroups }}}
        </main>
        <div class="chat__footer">
            {{{ chatMsgForm }}}
        </div>
        {{{ appendMenu }}}
        {{{ chatUsersMenu }}}
    </div>
    {{{ pagesNavigation }}}
</main>

